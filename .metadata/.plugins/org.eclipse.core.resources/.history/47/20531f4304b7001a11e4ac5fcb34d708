package JavaBasics;

public class Loop {

	public static void main(String[] args) {
		int i=1;
		while(i<=10)
		{
			System.out.println(i);
			i++;
		}
		// TODO Auto-generated method stub
		
		for(int j=0;j<=20;j++) {
			System.out.println(j);
		}
for(int k=20;k>=0;k--)
{
	System.out.println(k);
}
	}

}
